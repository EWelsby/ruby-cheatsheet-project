<h1>Editing forum_post</h1>

<% form_for([@forum_thread, @forum_post]) do |f| %>

  <%= f.error_messages %>

  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :forum_thread_id %><br />
    <%= f.text_field :forum_thread_id %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Back to thread', forum_thread_path(@forum_thread) %>

